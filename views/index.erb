<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>Graffiti Tracker</title>
  <link href="//fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css">
  <link href="//fonts.googleapis.com/css?family=Raleway:100" rel="stylesheet" type="text/css">
  <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>
  <script src="javascripts/vendor/jquery-2.1.3.js"></script>
  <script type="text/javascript" src="javascripts/maps.js"></script>
  <link rel="stylesheet" href="style/app.css">
</head>

<body>
  <h1>Chicago Graffiti Removal Tracker</h1>
  <h3>Find existing requests and make new ones for graffiti removal</h3>

  <form action='/' method= 'POST'>
    <input type="text" class="search-bar" placeholder="Search by Zip Code"
    name="Location" id="Location">
    <button type="button" class="search-btn">SEARCH</button>
  </form>

  <div class="map-canvas">
  </div>

  <script>
    $(document).ready(function(){
    var openChicagoRequests= $.parseJSON('<%= openRequests %>');
    console.log(jQuery.type(openChicagoRequests));
    chicagoMap = drawChicagoMap();
    map = addMapMarkers(openChicagoRequests, chicagoMap);
    });
  </script>

</body>
</html>
